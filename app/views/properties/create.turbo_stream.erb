<% if @properties.length == 1 %>
  <%= turbo_stream.replace "properties_section" do %>
    <%= render "list_properties", properties: @properties %>
  <% end %>
<% else %>
  <%= turbo_stream.append "properties" do %>
    <%= render "property", property: @property %>
  <% end %>
<% end %>
<%= turbo_stream.remove "#{dom_id(Property.new)}_form" %>