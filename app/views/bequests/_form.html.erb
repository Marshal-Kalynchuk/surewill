<%# Takes in f: form, primary: boolean, delegates: delegates %>
<div class="nested-fields relative rounded-lg border border-gray-300 bg-white px-6 py-5 shadow-sm flex items-center space-x-3 hover:border-gray-400 focus-within:ring-2 focus-within:ring-offset-2 focus-within:ring-indigo-500">

    <div class="flex-1 min-w-0">
    <%= f.hidden_field :primary, value: primary ? 1 : 0 %>
    <%= f.hidden_field :beneficiariable_type, value: "Delegate" %>
    <%= f.hidden_field :percentage, value: 100 %>

    <%= f.label :beneficiariable_id, value: "Beneficiary", class: "block text-sm font-medium text-gray-700 sm:mt-px sm:pt-2" %>
    <%= f.select :beneficiariable_id, delegates.collect{ |delegate| [ delegate.full_name, delegate.id ] }, {}, class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>


    <div class="mt-4 sm:mt-5 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
        <%= f.hidden_field :_destroy, value: 0 %>
        <%= link_to "Remove", "#", data: { action: "click->nested-form#remove_association" },  class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" %>
    </div>
  </div>
</div>