<div id="<%= dom_id bequest %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">New:</strong>
    <%= bequest.new %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Edit:</strong>
    <%= bequest.edit %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Create:</strong>
    <%= bequest.create %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Update:</strong>
    <%= bequest.update %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Destroy:</strong>
    <%= bequest.destroy %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this bequest", bequest, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this bequest', edit_bequest_path(bequest), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
