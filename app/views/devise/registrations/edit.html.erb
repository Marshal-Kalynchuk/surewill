<div class="mb-10">
<div class="relative mt-10 sm:mt-20">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Account Information</h3>
        <p class="mt-1 text-sm text-gray-600">Use your personal email where you can receive mail.</p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      
        <div class="shadow overflow-hidden sm:rounded-md">
          <div class="px-4 py-5 bg-white sm:p-6">
            <div class="grid grid-cols-6 gap-6">

              <% if resource.errors.any?%>
                <div class="col-span-6 sm:col-span-6">
                  <%= render "shared/error_messages", resource: resource %>
                </div>
              <% end %>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="col-span-6 sm:col-span-4">
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <%= f.email_field :email, autocomplete: "email", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              
    
             
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :password, value: "New password", class: "block text-sm font-medium text-gray-700" %> 
                <p class="block text-sm font-small text-gray-600"><%= @minimum_password_length %> characters minimum</p>
                <%= f.password_field :password, autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              
              <div class="col-span-6 sm:col-span-3">
                <%= f.label :password_confirmation, value: "Confirm new password", class: "block text-sm font-medium text-gray-700" %>
                <p class="invisible text-sm font-small text-gray-600"><%= @minimum_password_length %> characters minimum</p>
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>
              
              

              <div class="col-span-6 sm:col-span-4">
                <%= f.label :current_password, value: "Current password", class: "block text-sm font-medium text-gray-700" %>
                <p class="block text-sm font-small text-gray-600">We need your current password to confirm your changes</p> 
                <%= f.password_field :current_password, autocomplete: "current-password", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
              </div>

            </div>
          </div>
          <div class="px-4 py-3 bg-white text-right sm:px-6">
            <%= f.submit "Save", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if @portal_session %>
<div class="hidden sm:block" aria-hidden="true">
  <div class="py-5">
    <div class="border-t border-gray-200"></div>
  </div>
</div>

<div class="mt-10 sm:mt-0">
  <div class="md:grid md:grid-cols-3 md:gap-6">
    <div class="md:col-span-1">
      <div class="px-4 sm:px-0">
        <h3 class="text-lg font-medium leading-6 text-gray-900">Billing Information</h3>
        <p class="mt-1 text-sm text-gray-600">All your billing information.</p>
      </div>
    </div>
    <div class="mt-5 md:mt-0 md:col-span-2">
      <%= link_to "Manage Billing", @portal_session.url, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  </div>
</div>
<% end %>

<div class="hidden sm:block" aria-hidden="true">
  <div class="py-5">
    <div class="border-t border-gray-200"></div>
  </div>
</div>

<div class="md:grid md:grid-cols-3 md:gap-6">

  <div class="md:col-span-1">
    <div class="px-4 sm:px-0">
      <h3 class="text-lg font-medium leading-6 text-gray-900">Account Actions</h3>
      <p class="mt-1 text-sm text-gray-600">.</p>
    </div>
  </div>

  <div class="mt-5 md:mt-0 md:col-span-2">
    <div class="shadow overflow-hidden sm:rounded-md">

        <div class="px-4 py-3 text-right sm:px-6 bg-white">
          
          <div class="inline-block">
            <%= link_to "Sign out", destroy_user_session_path, data: { "turbo-confirm": "Are you sure you want to sign out?", "turbo-method": :delete }, class: "whitespace-nowrap text-sm font-medium text-gray-500 hover:text-gray-900 ml-8 inline-flex"  %>
          </div>
          <div class="inline-block">
            <%= button_to "Cancel my account", user_registration_path(resource_name), data: { confirm: "Are you sure you want cancel your account? All of your data will be lost."}, method: :delete, class: "whitespace-nowrap text-sm font-medium text-gray-500 hover:text-gray-900 ml-8 inline-flex" %>
          </div>
        </div>
      
    </div>
  </div>
</div>
</div>


