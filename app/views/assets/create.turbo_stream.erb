<% if @assets.length == 1 %>
  <%= turbo_stream.replace "asset_section" do %>
    <%= render "list_assets", assets: @assets %>
  <% end %>
<% else %>
  <%= turbo_stream.append "assets" do %>
    <%= render "asset", asset: @asset %>
  <% end %>
<% end %>
<%= turbo_stream.remove "#{dom_id(Asset.new)}_form" %>