<%= turbo_frame_tag "#{dom_id(asset)}_item" do %>
<li class="h-full w-full px-4 pt-5 pb-4 bg-white rounded-lg shadow-md text-left space-y-2 flex flex-col justify-between">
  <div class="w-full flex items-center justify-between space-x-6">
    <div class="flex-1 truncate">
    
      <% if asset.errors.any? %>
        <div class="mb-3">
          <%= render "shared/error_messages", resource: asset %>
        </div>  
      <% end %>

      <div class="flex items-center">
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= asset.title %></h3>
        <% unless asset.address.nil? %>
          <span class="ml-1 flex-shrink-0 inline-block text-gray-500 text-sm truncate"> | <%= asset.address.short_line_address %></span>
        <% end %>
      </div>

      <% unless asset.beneficiaries.empty? %>
      <div class="my-1">
        <h2 class="text-gray-500 text-sm font-medium">Beneficiaries:</h2>
        <ul role="list" class="mt-2 flex flex-wrap gap-2">
          <% asset.beneficiaries.each do |delegate| %>
            <%= render "shared/delegate_small", delegate: delegate, color: "bg-indigo-600" %>
          <% end %>
        </ul>
      </div>  
      <% end %>

    </div>
  </div>
  <div class="mt-3 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
    <%= link_to "Edit", edit_user_will_asset_path(current_user, asset), data: { turbo_frame: "model" }, class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm"%>
    <%= button_to "Delete", user_will_asset_path(current_user, asset), form: { data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" }}, method: :delete, class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" %>
  </div>
</li>
<% end %>
