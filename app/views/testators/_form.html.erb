<%= form_with model: [:user, :will, testator], id: "#{dom_id(testator)}_form", data: { turbo_frame: "_top"}, class: "sm:flex mt-5 sm:items-center" do |f| %>
<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
  <div class="fixed z-10 inset-0 overflow-y-auto">
    <div class="sm:flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0">
      <div
        class="relative bg-white rounded-lg px-4 pt-3 pb-3 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:max-w-lg sm:w-full sm:p-6">
        <div class="px-4 py-3 bg-white sm:p-6">

          <div class="grid grid-cols-6 gap-6">

            <div class="col-span-6">
              <%= render "shared/error_messages", resource: testator %>
            </div>

            <div class="col-span-6 sm:col-span-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
              <p class="mt-1 text-sm text-gray-600">Use your full legal name and address.</p>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <%= f.label :first_name, class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :first_name, autocomplete: "given_name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <%= f.label :middle_name, class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :middle_name, autocomplete: "additional_name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-2">
              <%= f.label :last_name, class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :last_name, autocomplete: "family_name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :country, class: "block text-sm font-medium text-gray-700" %>
              <%= f.select :country, ['United States', 'Canada', 'France', 'Germany', 'United Kingdom', 'Mexico'], {}, autocomplete: "country-name", class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6">
              <%= f.label :line_1, value: "Street address", class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :line_1, autocomplete: "street-address", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-6 lg:col-span-2">
              <%= f.label :city, class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :city, autocomplete: "address-level2", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <%= f.label :region, value: "State / Province", class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :region, autocomplete: "address-level1", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-3 lg:col-span-2">
              <%= f.label :postal_code, value: "ZIP / Postal code", class: "block text-sm font-medium text-gray-700"%>
              <%= f.text_field :postal_code, autocomplete: "postal-code", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>
            
          </div>
        <div class="px-0 py-4 text-right justify-end">
          <%= link_to "Cancel", user_will_delegates_path(current_user), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
          <%= f.submit value: "Save", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
        </div>
      </div>
    </div>
  </div>
</div>
<% end %>