<% if @size == 1 %>
  <%= turbo_stream.replace "belongings_section" do %>
    <%= turbo_frame_tag "belongings_section", src: user_will_belongings_path(current_user) %>
  <% end %>
<% else %>
  <%= turbo_stream.append "belongings" do %>
    <%= render "belonging", belonging: @belonging %>
  <% end %>
<% end %>
<%= turbo_stream.remove "#{dom_id(Belonging.new)}_form" %>