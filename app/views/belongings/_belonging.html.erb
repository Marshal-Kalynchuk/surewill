<div id="<%= dom_id belonging %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Will:</strong>
    <%= belonging.will_id %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= belonging.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= belonging.description %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this belonging", belonging, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this belonging', edit_belonging_path(belonging), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
