<div class="nested-fields col-span-6 relative grid grid-cols-6 gap-6">
  <div class="col-span-6 sm:col-span-3">
    <%= f.label :country_code, class: "block text-sm font-medium text-gray-700" %>
    <%= f.select :country_code, {'United States':'US', 'Canada':'CA', 'Mexico':'MX'}, {}, autocomplete: "country-name", class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
  </div>

  <div class="col-span-6">
    <%= f.label :line_1, value: "Street address", class: "block text-sm font-medium text-gray-700"%>
    <%= f.text_field :line_1, autocomplete: "street-address", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
  </div>

  <div class="col-span-6 sm:col-span-6 lg:col-span-2">
    <%= f.label :city, class: "block text-sm font-medium text-gray-700"%>
    <%= f.text_field :city, autocomplete: "address-level2", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
  </div>

  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
    <%= f.label :zone, class: "block text-sm font-medium text-gray-700"%>
    <%= f.text_field :zone, autocomplete: "address-level1", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
  </div>

  <div class="col-span-6 sm:col-span-3 lg:col-span-2">
    <%= f.label :postal_code, class: "block text-sm font-medium text-gray-700"%>
    <%= f.text_field :postal_code, autocomplete: "postal-code", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
  </div>
  <div class="col-span-6">
    <%= f.hidden_field :_destroy, value: 0 %>
    <%= link_to "Remove", "#", data: { action: "click->address-form#remove_association" },  class: "w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" %>
  </div>
</div>