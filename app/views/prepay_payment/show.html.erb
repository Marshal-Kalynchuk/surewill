<div class="bg-white rounded-md mt-24">
  <div class="max-w-2xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-0">
    <h1 class="text-3xl font-bold text-center tracking-tight text-gray-900 sm:text-4xl">Last Will & Testament PDF</h1>
      <div class="mt-12">
      <section aria-labelledby="cart-heading">
        <div class="flex py-6 border-t border-b border-gray-200 divide-y divide-gray-200">
          <p>Text about the product</p>
        </div>
      </section>
      <!-- Order summary -->
      <section aria-labelledby="summary-heading" class="mt-10">
        <h2 id="summary-heading" class="sr-only">Order summary</h2>
        <div>
          <dl class="space-y-4">
            <div class="flex items-center justify-between">
              <dt class="text-base font-medium text-gray-900">Subtotal</dt>
              <dd class="ml-4 text-base font-medium text-gray-900">$49.00</dd>
            </div>
          </dl>
          <p class="mt-1 text-sm text-gray-500">Taxes will be calculated at checkout.</p>
        </div>

        <div class="mt-10">
          <%= render partial: 'pay/stripe/checkout_button', 
          locals: {
            session: @checkout_session,
            title: "Proceed to checkout",
            class: "w-full bg-indigo-600 border border-transparent rounded-md shadow-sm py-3 px-4 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500"
          } %>
        </div>

        <div class="mt-6 text-sm text-center">
          <p>
            <%= link_to user_will_path(current_user), class: "text-indigo-600 font-medium hover:text-indigo-500" do %>
            back to will<span aria-hidden="true"> &rarr;</span>
            <% end %>
          </p>
        </div>
      </section>
    </div> 
  </div>
</div>