<%= form_with model: [:user, @will] do |form| %>
  <% if will.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(will.errors.count, "error") %> prohibited this will from being saved:</h2>
      <ul>
        <% will.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div>
    <%= form.label :testator, value: 'Name', style: "display: block" %>
    <%= form.text_field :testator %>
  </div>

  <h3>Beneficiaries</h3>
  <%= form.fields_for :accessors do |subform| %>
    <div>
      <%= subform.label :role, style: "display: block" %>
      <%= subform.select :role, ['Executor', 'Beneficiary', 'Notificiary']%>
    </div>
    <div>
      <%= subform.label :name, style: "display: block" %>
      <%= subform.text_field :name %>
    </div>
    <div>
      <%= subform.label :email, style: "display: block" %>
      <%= subform.text_field :email %>
    </div>
    <div>
      <%= subform.label :can_release, style: "display: block" %>
      <%= subform.check_box :can_release %>
  <% end %>

  <h3>Assets</h3>
  <p>This the where you put your house.</p>
  <%= form.fields_for :assets do |subform| %>
    <div>
      <%= subform.label :title, style: "display: block" %>
      <%= subform.text_field :title %>
    </div>

    <div>
      <%= subform.label :description, style: "display: block" %>
      <%= subform.text_area :description %>
    </div>

    <div>
      <%= subform.label :image, style: "display: block" %>
      <%= subform.file_field :image %>
    </div>

  <% end %>
  <div>
    <%= form.label :public, style: "display: block" %>
    <%= form.check_box :public %>
  </div>

  <div>
    <%= form.label :prepaid, style: "display: block" %>
    <%= form.check_box :prepaid %>
  </div>


  <div>
    <%= form.submit %>
  </div>

<% end %>
