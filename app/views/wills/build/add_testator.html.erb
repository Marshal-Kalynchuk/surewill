<div>
  <% if @testator %>
    <%= turbo_frame_tag @testator do %>
      <%= render partial: "testators/testator" %>
    <% end %>
  <% else %>
    <%= turbo_frame_tag Testator.new %>
    <%= link_to "Add testator",
                  new_user_will_testator_path,
                  class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium",
                  data: { turbo_frame: dom_id(Testator.new) } %>
  <% end %>
</div>

<%= button_to "Next", wizard_path, method: :put, params: {will: {status: @will.status}}, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
<br/>
<%= button_to "Back", previous_wizard_path, method: :get, class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>