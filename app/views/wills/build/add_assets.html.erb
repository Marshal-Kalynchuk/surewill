<h3>Assets</h3>
<%= render "errors" %>

<div class="container">
  <div class="header">
    <h1>assets</h1>
  </div>

  <%= turbo_frame_tag "assets" do %>
    <%= render partial: "assets/asset", collection: @assets %>
  <% end %>
  <%= turbo_frame_tag Asset.new %>
  <%= link_to "New asset",
                new_user_will_asset_path,
                class: "btn btn--primary",
                data: { turbo_frame: dom_id(Asset.new) } %>
</div>
<%= button_to "Next", wizard_path, method: :put, params: {will:{status: "add_assets"}} %>
<%= button_to "Back", previous_wizard_path, method: :get %>