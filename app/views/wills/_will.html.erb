<div class="mt-20">
  <div class="text-center">
    <% if @will.testator %>
    <h2 class="text-lg font-semibold text-indigo-600"></h2>
    <p
      class="mt-1 text-4xl tracking-tight font-bold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl lg:tracking-tight">
      Welcome <%= @testator.first_name %></p>
    <% else %>
    <p
      class="mt-1 text-4xl tracking-tight font-bold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl lg:tracking-tight">
      Last Will And Testement.</p>
    <% end %>
    <% unless @will.status == 'active' %>
    <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">Finish setting up your will below.</p>
    <% end %>
  </div>
</div>

<% spacing = "mt-5" %>

<div class="relative <%=spacing%> min-h-full flex flex-col justify-center py-5 px-3 sm:px-0">
  <%= render template: "testators/show", testator: @testator %>
</div>

<div class="relative <%=spacing%> min-h-full flex flex-col justify-center py-5 px-3 sm:px-0">
  <%= render template: "dependents/index", dependents: @dependents %>
</div>

<div class="relative <%=spacing%> min-h-full flex flex-col justify-center py-5 px-3 sm:px-0">
  <%= render template: "delegates/index", delegates: @delegates %>
</div>

<div class="relative <%=spacing%> min-h-full flex flex-col justify-center py-5 px-3 sm:px-0">
  <%= render template: "assets/index", assets: @assets %>
</div>

<div class="relative <%=spacing%> min-h-full flex flex-col justify-center py-5 px-3 sm:px-0">
  <div class="bg-white rounded-lg">
  <div class="max-w-7xl mx-auto py-16 px-4 sm:py-24 sm:px-6 lg:px-8">
    <% if true || @will.status == 'active' %>
      <% if @will.prepaid %>
      <div class="text-center">
        <h2 class="text-lg font-semibold text-indigo-600">Download</h2>
        <p
          class="mt-1 text-4xl tracking-tight font-bold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl lg:tracking-tight">
          Take control of your future.</p>
        <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">Download your completed will below. It is recommended that you download and sign the will with two witnesses.
        </p>
      </div>
      <div class="mt-10 max-w-sm mx-auto sm:max-w-none sm:flex sm:justify-center">
        <div class="space-y-4 sm:space-y-0 sm:mx-auto sm:inline-grid sm:grid-cols-1 sm:gap-5">
          <%= link_to "Download Will", new_user_will_property_path, data: { turbo_frame: "model" }, class: "inline-flex items-center justify-center rounded-md border border-transparent bg-indigo-600 px-4 py-2 text-sm font-medium text-white shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:w-auto"%>
        </div>
      </div>
      <% else %>
      <div class="text-center">
        <div class="max-w-2xl mx-auto mt-14 sm:mt-16 lg:max-w-xl lg:mt-0 lg:row-end-2 lg:row-span-2 lg:col-span-3">
          <h1 class="text-2xl font-bold tracking-tight text-gray-900 sm:text-3xl">Last Will & Testament PDF</h1>
          <p class="text-sm text-gray-500 mt-2"><time datetime=<%=Date.current%>><%=Date.current%></time></p>
          <p class="text-gray-500 mt-6">You must download, print and sign your will with two witnesses. To download the PDF version of your will you must pay a one time service fee. Paying gives you access to your will PDF and all future features of Surewill.</p>
          <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-4 sm:grid-cols-2">
            <%= link_to "Checkout", prepay_user_will_path(current_user), class: "w-full bg-indigo-600 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500"%>
            <%= link_to "Preview", preview_user_will_path(current_user), class: "w-full bg-indigo-50 border border-transparent rounded-md py-3 px-8 flex items-center justify-center text-base font-medium text-indigo-700 hover:bg-indigo-100 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-50 focus:ring-indigo-500"%>
          </div>
        </div>
      </div>
      <% end %>
    <% else %>
    <div class="text-center">
      <h2 class="text-lg font-semibold text-indigo-600">Download PDF</h2>
      <p
        class="mt-1 text-4xl tracking-tight font-bold text-gray-900 sm:text-5xl sm:tracking-tight lg:text-6xl lg:tracking-tight">
        </p>
      <p class="max-w-xl mt-5 mx-auto text-xl text-gray-500">Please complete your will before continuing.
      </p>
    </div>
    <% end %>
    </div>
  </div>
</div>
  

    
      
