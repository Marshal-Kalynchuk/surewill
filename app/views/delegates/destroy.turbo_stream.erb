<%= turbo_stream.remove "#{dom_id(@delegate)}_item" %>
<% if @delegates.empty? %>
  <%= turbo_stream.replace "delegate_section" do %>
    <%= render "no_delegates" %>
  <% end %>
<% end %>

<% @invalid_assets.each do |asset| %>
  <%= turbo_stream.update "#{dom_id(asset)}_item" do %>
    <%= render "assets/asset", asset: asset %>
  <% end %>
<% end %>

<% @delegates.each do |delegate| %>
  <% if delegate.saved_changes %>
    <%= turbo_stream.update "#{dom_id(delegate)}_item" do %>
      <%= render "delegate", delegate: delegate %>
    <% end %>
  <% end %>
<% end %>