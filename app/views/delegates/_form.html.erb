<%= form_with model: [:user, :will, delegate], id: "#{dom_id(delegate)}_form", data: { turbo_frame: "_top"}, class: "sm:flex mt-5 sm:items-center" do |f| %>
<div class="relative z-10" aria-labelledby="modal-title" role="dialog" aria-modal="true">
  <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity"></div>
  <div class="fixed z-10 inset-0 overflow-y-auto">
    <div class="sm:flex items-end sm:items-center justify-center min-h-full p-4 text-center sm:p-0">
      <div
        class="relative bg-white rounded-lg px-4 pt-3 pb-3 text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:max-w-4xl sm:w-full sm:p-6">
        <div class="px-4 py-3 bg-white sm:p-6">

          <div class="grid grid-cols-6 gap-6">

            <div class="col-span-6">
              <%= render "shared/error_messages", resource: delegate %>
            </div>
            
            <div class="col-span-6">
              <h3 class="text-lg font-medium leading-6 text-gray-900">Delegate Information</h3>
              <p class="mt-1 text-sm text-gray-600">This information will help identify the delegate on your will.
                Please use their full legal name and address.</p>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :first_name, autocomplete: "given-name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
              <%= f.text_field :last_name, autocomplete: "family-name", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
            </div>

            <%= f.fields_for :address do |ff| %>

              <div class="col-span-6 sm:col-span-3">
                <%= ff.label :country_code, class: "block text-sm font-medium text-gray-700" %>
                <%= ff.select :country_code, {'United States':'US', 'Canada':'CA', 'Mexico':'MX'}, {}, autocomplete: "country-name", class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
              </div>

              <div class="col-span-6 sm:col-span-3">
                <%= ff.label :city, class: "block text-sm font-medium text-gray-700"%>
                <%= ff.text_field :city, autocomplete: "address-level2", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
              </div>

              <div class="col-span-6 sm:col-span-6">
                <%= ff.label :zone, class: "block text-sm font-medium text-gray-700"%>
                <%= ff.text_field :zone, autocomplete: "address-level1", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md"%>
              </div>

            <% end %>

            <div class="col-span-6 sm:col-span-4">
              <%= f.label :relation, value: "Relation", class: "block text-sm font-medium text-gray-700"  %>
              <%= f.select :relation, ['Decendent', 'Friend', 'Other'], {}, class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <div class="relative flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :executor, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded", "aria-describedby": "executor-description" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :executor, class: "font-medium text-gray-700" %>
                  <p id="executor-description" class="text-gray-500">Select them as an executor to your estate.</p>
                </div>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <div class="relative flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :inherits_remainder, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded", "aria-describedby": "inherits_remainder-description" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :inherits_remainder, class: "font-medium text-gray-700" %>
                  <p id="inherits_remainder-description" class="text-gray-500">Select them to inherit the remainder of your estate. They, and others you select will inherit your estate in equal shares.</p>
                </div>
              </div>
            </div>

            <div class="col-span-6 sm:col-span-3">
              <div class="relative flex items-start">
                <div class="flex items-center h-5">
                  <%= f.check_box :guardian, class: "focus:ring-indigo-500 h-4 w-4 text-indigo-600 border-gray-300 rounded", "aria-describedby": "guardian-description" %>
                </div>
                <div class="ml-3 text-sm">
                  <%= f.label :guardian, class: "font-medium text-gray-700" %>
                  <p id="guardian-description" class="text-gray-500">Select them as an guardian to the dependents you listed.</p>
                </div>
              </div>
            </div>

          </div>
          <div class="px-0 py-4 text-right justify-end">
            <%= link_to "Cancel", user_will_delegates_path(current_user), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
            <%= f.submit value: "Save", min: 0, max: 2, class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500"%>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>