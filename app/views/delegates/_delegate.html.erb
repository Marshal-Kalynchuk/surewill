<%= turbo_frame_tag "#{dom_id(delegate)}_item" do %>
<li class="h-full w-full px-4 pt-5 pb-4 bg-white rounded-lg shadow-md text-left space-y-2 flex flex-col justify-between">
  <div class="w-full flex items-center justify-between space-x-6">
    <div class="flex-1 truncate">
      <div class="flex items-center space-x-3">
        <h3 class="text-lg leading-6 font-medium text-gray-900"><%= delegate.full_name %></h3>
      </div>
      <p class="mt-1 text-gray-500 text-sm truncate"><%= delegate.relation %> | <%= delegate.address.short_broad_address %></p>
      <div class="flex flex-wrap gap-2 mt-2">
        <% if delegate.executor == true %>
          <% if delegate.executor_rank == 1 %>
            <span class="flex-shrink-0 inline-block px-2 py-0.5 text-teal-800 text-sm font-medium bg-teal-200 rounded-full">Primary Executor</span>
          <% else %>
            <span class="flex-shrink-0 inline-block px-2 py-0.5 text-teal-800 text-sm font-medium bg-teal-200 rounded-full">Alternate Executor <%= (delegate.executor_rank - 1) %></span>
          <% end %>
        <% end %>
        <% if delegate.guardian == true %>
          <% if delegate.guardian_rank == 1 %>
            <span class="flex-shrink-0 inline-block px-2 py-0.5 text-blue-800 text-sm font-medium bg-blue-200 rounded-full">Primary Guardian</span>
          <% else %>
            <span class="flex-shrink-0 inline-block px-2 py-0.5 text-blue-800 text-sm font-medium bg-blue-200 rounded-full">Alternate Guardian <%= (delegate.guardian_rank - 1) %></span>
          <% end %>
        <% end %>
        <% if delegate.inherits_remainder == true %>
          <span class="flex-shrink-0 inline-block px-2 py-0.5 text-purple-800 text-sm font-medium bg-purple-200 rounded-full">Inherits Estate</span>
        <% end %>
      </div>
    </div>
  </div>
  <div class="mt-3 sm:grid sm:grid-cols-2 sm:gap-3 sm:grid-flow-row-dense">
    <%= link_to "Edit", edit_user_will_delegate_path(current_user, delegate), data: { turbo_frame: "model" }, class: "w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-indigo-600 text-base font-medium text-white hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:col-start-2 sm:text-sm"%>
    <%= button_to "Delete", user_will_delegate_path(current_user, delegate), form: { data: { turbo_confirm: "Are you sure?", turbo_frame: "_top" }}, method: :delete, class: "mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:col-start-1 sm:text-sm" %>
  </div>
  </li>
<% end %>
